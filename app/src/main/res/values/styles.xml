<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorEdgeEffect">@color/colorLightest</item>
        <item name="android:colorBackground">@color/colorDarkerII</item>
        <item name="colorControlHighlight">@color/colorRippleLight</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
    </style>

    <!-- Splash Screen Style -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorDarkerII</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Styles the text inside Snackbar -->
    <style name="SnackbarTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EpisodeActivity Theme -->
    <style name="EpisodeTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorDarkest</item>
        <item name="colorPrimaryDark">@color/colorDarkest</item>
    </style>

    <!-- TextView in "category_item" layout -->
    <style name="ItemView">
        <item name="android:textColor">@color/colorLightest</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <!-- News feed shown in HeadlineFragment -->
    <style name="NewsFeedContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Recycler View contains regional news feed -->
    <style name="NewsFeedRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightNewsFeed</item>
        <item name="android:layout_marginTop">@dimen/marginSmall</item>
        <item name="android:paddingBottom">@dimen/paddingMedium</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- View having both width and height - "wrap_content" -->
    <style name="BasicView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- "See More" TextView -->
    <style name="NewsFeedSeeMore" parent="BasicView">
        <item name="android:text">@string/labelSeeMore</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/paddingSmall</item>
    </style>

    <!-- News Section -->
    <style name="NewsSection">
        <item name="android:letterSpacing">@fraction/letterSpacingLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeSmaller</item>
    </style>

    <!-- Sets space at the start for news item having type - TYPE_SEVEN and TYPE_TEN -->
    <style name="ContainerStart" parent="BasicView">
        <item name="android:layout_marginStart">@dimen/spaceMedium</item>
        <item name="android:layout_marginEnd">@dimen/spaceSmallest</item>
    </style>

    <!-- Sets space horizontally for news items having type - TYPE_SIX and TYPE_NINE -->
    <style name="ContainerBetween" parent="BasicView">
        <item name="android:layout_marginHorizontal">@dimen/spaceSmallest</item>
    </style>

    <!-- Sets space at the end of news item having type - TYPE_EIGHT and TYPE_ELEVEN -->
    <style name="ContainerEnd" parent="BasicView">
        <item name="android:layout_marginStart">@dimen/spaceSmallest</item>
        <item name="android:layout_marginEnd">@dimen/spaceSmallII</item>
    </style>

    <!-- News Thumbnail -->
    <style name="NewsThumbnail">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- News thumbnail for feed - "US", "UK", and "Australia" -->
    <style name="ThumbnailDefault" parent="NewsThumbnail">
        <item name="android:layout_width">@dimen/widthThumbnailMedium</item>
        <item name="android:layout_height">@dimen/heightThumbnailMedium</item>
    </style>

    <!-- News thumbnail for feed - "Editorial" -->
    <style name="ThumbnailEditorial" parent="NewsThumbnail">
        <item name="android:layout_width">@dimen/widthThumbnailLarge</item>
        <item name="android:layout_height">@dimen/heightThumbnailMediumII</item>
    </style>

    <!-- News Headline -->
    <style name="HeadlineStyle">
        <item name="android:maxLines">@integer/maxLinesFour</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:lineSpacingExtra">@dimen/spaceSmallest</item>
    </style>

    <!-- News headline for feed - TYPE_NINE, TYPE_TEN, and TYPE_ELEVEN -->
    <style name="HeadlineFeedEditorial" parent="HeadlineStyle">
        <item name="android:textColor">@color/colorLightest</item>
    </style>

    <!-- News Author -->
    <style name="AuthorStyle">
        <item name="android:maxLines">@integer/maxLinesTwo</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">@dimen/spaceSmallest</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/textSizeSmaller</item>
        <item name="android:letterSpacing">@fraction/letterSpacingSmall</item>
    </style>

    <!-- News author info. for TYPE_NINE, TYPE_TEN, and TYPE_ELEVEN -->
    <style name="AuthorFeeEditorial" parent="AuthorStyle">
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <!-- Styles the podcast platform in "podcast_about" layout -->
    <style name="PodcastStyle">
        <item name="android:background">@drawable/ripple_podcast_platform</item>
        <item name="android:layout_height">@dimen/dimenPodcast</item>
        <item name="android:layout_width">@dimen/dimenPodcast</item>
        <item name="android:padding">@dimen/paddingMediumII</item>
    </style>

    <!-- Styles the social media platforms in "layout_social" layout -->
    <style name="SocialStyle" parent="BasicView">
        <item name="android:padding">@dimen/paddingSmall</item>
        <item name="android:background">@drawable/ripple_social</item>
    </style>

    <!-- Styles the CardView which contains the thumbnail and placeholder -->
    <style name="ThumbnailContainer" parent="CardView">
        <item name="android:layout_marginStart">@dimen/marginCompact</item>
        <item name="android:layout_marginTop">@dimen/marginCompact</item>
        <item name="android:layout_marginEnd">@dimen/marginCompact</item>
        <item name="cardCornerRadius">@dimen/spaceSmaller</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Styles thumbnail container for TYPE_SIX, TYPE_SEVEN and TYPE_EIGHT -->
    <style name="ThumbnailContainerSmall" parent="ThumbnailContainer">
        <item name="cardBackgroundColor">@color/colorDarkerII</item>
        <item name="android:layout_width">@dimen/widthThumbnailMedium</item>
        <item name="android:layout_height">@dimen/heightThumbnailMedium</item>
    </style>

    <!-- Styles thumbnail container for TYPE_NINE, TYPE_TEN and TYPE_ELEVEN -->
    <style name="ThumbnailContainerLarge" parent="ThumbnailContainer">
        <item name="cardBackgroundColor">@color/colorDarker</item>
        <item name="android:layout_width">@dimen/widthThumbnailLarge</item>
        <item name="android:layout_height">@dimen/heightThumbnailMediumII</item>
    </style>

    <!-- Styles the EditText in SearchActivity -->
    <style name="QueryEntryStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:imeOptions">actionSearch</item>
        <item name="boxBackgroundColor">@color/colorDarker</item>
        <item name="boxCornerRadiusTopStart">@dimen/spaceSmall</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spaceSmall</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spaceSmall</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spaceSmall</item>
        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/colorLight</item>
        <item name="startIconTint">@color/colorLight</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="android:theme">@style/TextInputTheme</item>
    </style>

    <!-- Theme for QueryEntryStyle -->
    <style name="TextInputTheme">
        <item name="colorControlActivated">@color/colorRedDark</item>
    </style>
</resources>