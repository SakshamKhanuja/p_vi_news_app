<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <!-- Style BottomNavigationView -->
    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="itemRippleColor">@color/colorBottomRipple</item>
        <item name="itemIconTint">@color/bottom_navigation</item>
        <item name="itemTextColor">@color/bottom_navigation</item>
        <item name="menu">@menu/bottom_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Fragment Category Text-->
    <style name="FragmentLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView in "category_item" layout -->
    <style name="ItemView">
        <item name="android:textColor">@color/colorCategoryName</item>
        <item name="android:textSize">@dimen/category_title_text_size</item>
    </style>

    <!-- Chip Style-->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/colorCategoryName</item>
        <item name="chipBackgroundColor">@color/colorBackgroundDivider</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipStrokeColor">@color/colorCategoryName</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="rippleColor">@color/colorRippleTitle</item>
    </style>
</resources>