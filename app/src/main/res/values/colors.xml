    <!-- Colors the News Category Title Bar under "Opinion" Category -->
    <color name="colorNewsCategoryOpinion">#FF7F0F</color>

    <!-- Colors the News Category Title Bar under "Sport" Category -->
    <color name="colorNewsCategorySport">#00B2FF</color>

    <!-- Colors the News Category Title Bar under "Culture" Category -->
    <color name="colorNewsCategoryCulture">#EACCA0</color>

    <!-- Colors the News Category Title Bar under "Lifestyle" Category -->
    <color name="colorNewsCategoryLifestyle">#FFABDB</color>

