<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Colors the Status Bar -->
    <color name="colorPrimaryDark">#374347</color>

    <!-- Colors the Action Bar -->
    <color name="colorPrimary">#46555A</color>

    <!-- Colors the activated framework components -->
    <color name="colorAccent">@android:color/black</color>

    <!-- Colors the text of news categories in "fragment_category" -->
    <color name="colorCategoryName">@android:color/white</color>

    <!-- Colors the background of title in CategoryFragment -->
    <color name="colorBackgroundCategoryItem">#212121</color>

    <!-- Colors the ripple of item in CategoryFragment -->
    <color name="colorRippleTitle">#39FFFFFF</color>

    <!-- Colors the background of every screen -->
    <color name="colorBackground">@android:color/white</color>

    <!-- Colors the selected menu item in BottomNavigationView -->
    <color name="colorBottomActive">#ff847c</color>

    <!-- Colors menu items in BottomNavigationView -->
    <color name="colorBottomInactive">#757575</color>

    <!-- Colors the ripple in BottomNavigationView -->
    <color name="colorBottomRipple">#212121</color>

    <!-- Colors the background of CategoryFragment -->
