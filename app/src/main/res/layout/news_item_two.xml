<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/marginSmall"
    android:orientation="vertical">

    <!-- Shows news' headline -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/paddingMedium"
        android:paddingVertical="@dimen/paddingSmall">

        <!-- Vertical Divider -->
        <View
            android:layout_width="@dimen/widthLineVertical"
            android:layout_height="match_parent"
            android:background="@color/colorDarker" />

        <!-- Shows news headline -->
        <TextView
            android:id="@+id/text_headline_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginMedium"
            android:lineSpacingExtra="@dimen/spaceSmaller"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSizeMedium"
            tools:text="$10bn James Webb space telescope launches on ‘eternal search’ mission" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceSmall" />
</LinearLayout>