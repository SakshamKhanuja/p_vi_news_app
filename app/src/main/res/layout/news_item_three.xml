<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_title">

    <!-- Shows news thumbnail -->
    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="0dp"
        android:layout_height="@dimen/thumbnail_height"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:contentDescription="@string/content_description_news_title"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_section_name"
        tools:srcCompat="@drawable/sample_news_thumbnail" />

    <!-- Shows news headline -->
    <TextView
        android:id="@+id/text_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:lineSpacingExtra="@dimen/width_vertical_line"
        android:layout_marginBottom="@dimen/margin_default"
        android:ellipsize="end"
        android:maxLines="@integer/max_lines_by_line"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_section_name"
        app:layout_constraintVertical_bias="1.0"
        tools:background="@drawable/gradient_headline"
        tools:paddingBottom="@dimen/padding_small"
        tools:paddingHorizontal="@dimen/padding_default"
        tools:paddingTop="@dimen/padding_default"
        tools:text="Jos Buttler insists he has no plans to retire from Test cricket after Ashes" />

    <!-- Shows news section -->
    <TextView
        android:id="@+id/text_section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="@fraction/spacing_section"
        android:textAllCaps="true"
        android:textColor="@color/colorSectionName"
        android:textSize="@dimen/text_size_section_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sport" />
</androidx.constraintlayout.widget.ConstraintLayout>