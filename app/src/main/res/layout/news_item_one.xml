<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:background="?attr/selectableItemBackground"
    android:paddingVertical="@dimen/padding_small">

    <!-- Shows news headline -->
    <TextView
        android:id="@+id/text_headline_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_horizontal_news_item"
        android:lineSpacingExtra="@dimen/spacing_headline"
        android:textColor="@android:color/black"
        android:textSize="@dimen/category_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line_vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$10bn James Webb space telescope launches on ‘eternal search’ mission" />

    <!-- Vertical Divider -->
    <View
        android:id="@+id/line_vertical"
        android:layout_width="@dimen/width_vertical_line"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_default"
        android:background="@color/colorBackgroundCategoryItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>