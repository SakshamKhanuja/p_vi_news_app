<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_basic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <!-- Shows the contents of a episode -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkerII"
        android:orientation="vertical">

        <!-- Shows basic details of an episode - title and date -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/basic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_dark">

            <!-- Shows episode's title -->
            <TextView
                android:id="@+id/collapsed_episode_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginLarge"
                android:layout_marginTop="@dimen/marginMedium"
                android:layout_marginEnd="@dimen/marginMedium"
                android:lineSpacingExtra="@dimen/widthLineVertical"
                android:textColor="@color/colorLightest"
                android:textSize="@dimen/textSizeMedium"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/image_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Looking back on the Guardian’s 200th year" />

            <!-- Shows episode's recorded date -->
            <TextView
                android:id="@+id/collapse_episode_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginSmall"
                android:layout_marginBottom="@dimen/marginMedium"
                android:letterSpacing="@fraction/letterSpacingSmall"
                android:textColor="@color/colorLight"
                android:textSize="@dimen/textSizeSmaller"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/collapsed_episode_name"
                app:layout_constraintTop_toBottomOf="@+id/collapsed_episode_name"
                tools:text="Dec 23, 2021" />

            <!-- Indicates whether episode card is expanded or collapsed -->
            <ImageView
                android:id="@+id/image_arrow"
                android:layout_width="@dimen/marginLarge"
                android:layout_height="@dimen/marginLarge"
                android:layout_marginEnd="@dimen/marginLarge"
                android:contentDescription="@string/content_description_news_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_arrow_down" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Shows additional data about episode card view is expanded -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Shows episode's recorded date -->
            <TextView
                android:id="@+id/expanded_episode_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginMedium"
                android:layout_marginTop="@dimen/marginSmall"
                android:layout_marginEnd="@dimen/marginLarge"
                android:letterSpacing="@fraction/letterSpacingSmall"
                android:textColor="@color/colorLight"
                android:textSize="@dimen/textSizeSmaller"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/expanded_episode_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/expanded_episode_title"
                tools:text="Dec 23, 2021" />

            <!-- Shows episode's title -->
            <TextView
                android:id="@+id/expanded_episode_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginMedium"
                android:layout_marginTop="@dimen/marginMedium"
                android:layout_marginEnd="@dimen/marginLarge"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/widthLineVertical"
                android:maxLines="@integer/maxLinesTwo"
                android:textColor="@color/colorLightest"
                android:textSize="@dimen/textSizeMediumII"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/expanded_episode_thumbnail"
                app:layout_constraintTop_toBottomOf="@+id/expanded_episode_byline"
                tools:text="Looking back on the Guardian’s 200th year" />

            <!-- Show's episode's thumbnail -->
            <ImageView
                android:id="@+id/expanded_episode_thumbnail"
                android:layout_width="@dimen/heightThumbnailMedium"
                android:layout_height="@dimen/heightThumbnailMedium"
                android:layout_marginStart="@dimen/marginLarge"
                android:layout_marginTop="@dimen/marginMedium"
                android:contentDescription="@string/content_description_news_title"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expanded_episode_byline"
                tools:src="@drawable/sample_podcast_thumbnail" />

            <!-- Shows info about the episode -->
            <TextView
                android:id="@+id/expanded_episode_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginLarge"
                android:layout_marginTop="@dimen/marginMedium"
                android:layout_marginEnd="@dimen/marginLarge"
                android:layout_marginBottom="@dimen/marginMedium"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="@fraction/letterSpacingSmall"
                android:lineSpacingExtra="@dimen/widthLineVertical"
                android:textColor="@color/colorLight"
                android:textSize="@dimen/textSizeMedium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expanded_episode_thumbnail"
                tools:text="Editor-in-chief Katharine Viner reflects on how a newspaper founded two centuries ago chronicled the ups and downs of 2021" />

            <!-- Shows info. about the attendees -->
            <TextView
                android:id="@+id/expanded_episode_byline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorHighlight"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="@fraction/letterSpacingSmall"
                android:lineSpacingExtra="@dimen/widthLineVertical"
                android:paddingHorizontal="@dimen/paddingLarge"
                android:paddingVertical="@dimen/paddingMedium"
                android:textColor="@color/colorLightest"
                android:textSize="@dimen/textSizeMedium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="By Line" />

            <!-- Opens up this episode in "The Guardian" website -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/expanded_episode_play"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:contentDescription="@string/content_description_news_title"
                app:backgroundTint="@color/colorHighlightII"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expanded_episode_date"
                app:rippleColor="@color/colorDarkest"
                app:srcCompat="@drawable/ic_play" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>